<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="Microsoft.AspNet.Identity.EntityFramework"
                   namespace="Microsoft.AspNet.Identity.EntityFramework">
  <class name="IdentityRole" table="AspNetRoles">
    <id name="Id">
    </id>
    <property name="Name"/>
    <bag name="Users" table="AspNetUserRoles" fetch="join" inverse="true" cascade="all-delete-orphan">
      <key column="RoleId">
      </key>
      <many-to-many class="ApplicationUser" column="UserId"/>
    </bag>
  </class>
</hibernate-mapping>